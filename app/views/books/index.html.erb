<div class ="container">
  
  <h1> Reading List </h1>

  <ol class ="breadcrumb">
    <li class="avtive">
      Books
    </li>
  </ol>
  <div class ='row'>
    <div class='col-sm-12'>
      <p>
        <form>
          <legend>Search</legend>
          <div class='col-xs-4'>
            <input type='text' class ='form-control' value='<%= params[:keyword]%>' name='keyword' placeholder='Keyword'>
          </div>
        </form>
      </p>
    </div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Amazon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr class='<%= "finished" if book.finished? %>'>
        <td><%= image_from_amazon(book.amazon_id) %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <div class="col-sm-4">
    <h2> Genres</h2>
    <ul class="list-unystyled">
      <%= @genres.each do |genre| %>
        <li>
          <%= link_to genre.name, books_path(filter: genre.name), class: 'label label-primary' %>
        </li>
      <% end %>
     </ul>
  </div>
</div>